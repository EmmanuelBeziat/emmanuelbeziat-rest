{
  "name": "node-rest",
  "version": "4.0.0",
  "description": "ðŸŽ² A NodeJS App that provide a very simple REST API (just GET) from markdown files.",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "npm run dev",
    "setup": "npm i && node setup.js",
    "build": "tsc",
    "dev": "tsc && node --watch -r dotenv/config dist/index.js",
    "prod": "tsc && node -r dotenv/config dist/index.js",
    "deploy": "tsc && pm2 start dist/index.js --name 'emmanuelb-rest' --node-args='-r dotenv/config' || pm2 reload emmanuelb-rest --update-env",
    "test": "vitest --run",
    "lint": "npx eslint src",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,cjs,mjs}": [
      "npx eslint"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EmmanuelBeziat/node-rest.git"
  },
  "keywords": [
    "nodejs",
    "rest-api",
    "fastify",
    "markdown"
  ],
  "author": "EmmanuelBeziat <contact@emmanuelbeziat.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EmmanuelBeziat/node-rest/issues"
  },
  "homepage": "https://github.com/EmmanuelBeziat/node-rest#readme",
  "dependencies": {
    "@braintree/sanitize-url": "^7.1.1",
    "@fastify/static": "^8.2.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "fastify-favicon": "^5.0.0",
    "glob": "^11.0.3",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-attrs": "^4.3.1",
    "markdown-it-block-embed": "^0.0.3",
    "markdown-it-image-lazy-loading": "^2.0.1",
    "markdown-it-prism": "^3.0.0",
    "markdown-it-smartarrows": "^1.0.1",
    "meta-marked": "^0.5.0",
    "slug": "^11.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@eslint/js": "^9.37.0",
    "@fastify/cors": "^11.1.0",
    "@types/markdown-it": "^14.1.2",
    "@types/markdown-it-anchor": "^7.0.0",
    "@types/markdown-it-attrs": "^4.1.3",
    "@types/node": "^24.7.2",
    "@types/slug": "^5.0.9",
    "cross-env": "^10.1.0",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "inquirer": "^12.9.6",
    "lint-staged": "^16.2.4",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
