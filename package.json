  "bugs": {
    "url": "https://github.com/EmmanuelBeziat/node-rest/issues"
  },
  "homepage": "https://github.com/EmmanuelBeziat/node-rest#readme",
  "dependencies": {
    "@braintree/sanitize-url": "^5.0.0",
    "dotenv": "^8.2.0",
    "fastify": "^3.8.0",
    "fastify-cors": "^5.0.0",
    "glob": "^7.1.6",
    "meta-marked": "^0.5.0"
  }
