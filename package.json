    "@fastify/cors": "^8.1.0",
    "dotenv": "^16.0.3",
    "fastify": "^4.8.1",
    "fastify-favicon": "^4.2.0",
    "glob": "^8.0.3",
    "markdown-it": "^13.0.1",
